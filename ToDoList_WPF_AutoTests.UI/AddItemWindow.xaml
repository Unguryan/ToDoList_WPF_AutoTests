<Window x:Class="ToDoList_WPF_AutoTests.UI.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList_WPF_AutoTests.UI"
        xmlns:automation="clr-namespace:System.Windows.Automation;assembly=PresentationCore"
        mc:Ignorable="d"
        Title="Add Item" Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Title" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBox x:Name="TitleTextBox" Padding="6,4" MaxLength="200"
                     automation:AutomationProperties.AutomationId="TitleTextBox"
                     automation:AutomationProperties.Name="TitleTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Deadline" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <DatePicker x:Name="DeadlineDatePicker" Padding="6,4"
                        automation:AutomationProperties.AutomationId="DeadlineDatePicker"
                        automation:AutomationProperties.Name="DeadlineDatePicker"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBox x:Name="DescriptionTextBox" Padding="6,4"
                     automation:AutomationProperties.AutomationId="DescriptionTextBox"
                     automation:AutomationProperties.Name="DescriptionTextBox"
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                     Height="100" VerticalContentAlignment="Top"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" IsDefault="True" Width="80" Margin="0,0,8,0" Click="OkButton_Click"
                    automation:AutomationProperties.AutomationId="OkButton"
                    automation:AutomationProperties.Name="OkButton"/>
            <Button x:Name="CancelButton" Content="Cancel" IsCancel="True" Width="80" Click="CancelButton_Click"
                    automation:AutomationProperties.AutomationId="CancelButton"
                    automation:AutomationProperties.Name="CancelButton"/>
        </StackPanel>
    </Grid>
</Window>
