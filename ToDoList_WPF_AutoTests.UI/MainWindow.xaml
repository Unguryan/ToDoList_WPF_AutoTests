<Window x:Class="ToDoList_WPF_AutoTests.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList_WPF_AutoTests.UI"
        xmlns:automation="clr-namespace:System.Windows.Automation;assembly=PresentationCore"
        mc:Ignorable="d"
        Title="To-Do List" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" x:Name="NewItemTextBox"
                 automation:AutomationProperties.AutomationId="NewItemTextBox"
                 automation:AutomationProperties.Name="NewItemTextBox"
                 Text="{Binding NewItemTitle, UpdateSourceTrigger=PropertyChanged}"
                 Padding="8,6" Margin="0,0,0,8"
                 KeyDown="NewItemTextBox_KeyDown"/>

        <Button Grid.Row="1" x:Name="AddButton"
                automation:AutomationProperties.AutomationId="AddButton"
                automation:AutomationProperties.Name="AddButton"
                Content="Add"
                Command="{Binding AddCommand}"
                Padding="16,6" Margin="0,0,0,8" HorizontalAlignment="Left"/>

        <ListBox Grid.Row="2" x:Name="TodoList"
                 automation:AutomationProperties.AutomationId="TodoList"
                 automation:AutomationProperties.Name="TodoList"
                 ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                 DisplayMemberPath="Title"
                 Margin="0,0,0,8">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="automation:AutomationProperties.Name" Value="{Binding Title}" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button x:Name="RemoveButton"
                    automation:AutomationProperties.AutomationId="RemoveButton"
                    automation:AutomationProperties.Name="RemoveButton"
                    Content="Remove"
                    Command="{Binding RemoveCommand}"
                    Padding="16,6" Margin="0,0,8,0"/>
            <Button x:Name="CompleteButton"
                    automation:AutomationProperties.AutomationId="CompleteButton"
                    automation:AutomationProperties.Name="CompleteButton"
                    Content="Complete"
                    Command="{Binding ToggleCompleteCommand}"
                    Padding="16,6"/>
        </StackPanel>
    </Grid>
</Window>
